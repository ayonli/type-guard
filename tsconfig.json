{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "rootDir": "src/",
        "outDir": "dist/",
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "importHelpers": true,
        "removeComments": true,
        "sourceMap": true,
        "paths": {
            "@ayonli/type-guard": [
                "."
            ]
        }
    },
    "include": [
        "./src/*.ts",
    ],
    "ts-node": {
        "compilerOptions": {
            "target": "es2020",
            "rootDir": "test/",
            "noEmit": true,
            "noUnusedParameters": false,
            "experimentalDecorators": true
        },
        "include": [
            "./test/*.ts"
        ],
    }
}
