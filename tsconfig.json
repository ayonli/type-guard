{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": false,
        "sourceMap": true,
        "paths": {
            "@hyurl/type-guard": [
                "."
            ]
        }
    },
    "include": [
        "./src/*.ts",
        "./src/*/*.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "rootDir": "test/",
            "noEmit": true
        },
        "include": [
            "./test/*.ts",
            "./test/*/*.ts"
        ],
    }
}
